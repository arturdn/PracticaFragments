<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".fragments">


    <ImageButton
        android:layout_width="100dp"
        android:background="@drawable/messi"
        android:layout_height="100dp"
        android:id="@+id/messi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showMessi"/>

    <ImageButton
        android:layout_width="100dp"
        android:background="@drawable/iniesta"
        android:layout_height="100dp"
        android:id="@+id/iniesta"
        android:layout_alignTop="@+id/messi"
        android:layout_centerHorizontal="true"
        android:onClick="showIniesta"/>

    <ImageButton
        android:layout_width="100dp"
        android:background="@drawable/xavi"
        android:layout_height="100dp"
        android:id="@+id/xavi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="showXavi"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.mycompany.practicafragments.Futbolista"
        android:id="@+id/fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
